# Database
DATABASE_URL="postgresql://username:password@localhost:5432/foodpanda"

# Better Auth Configuration
BETTER_AUTH_SECRET="your-super-secret-key-here-minimum-32-characters"
BETTER_AUTH_URL="http://localhost:3000"

# Email Configuration
# Gmail (default)
GMAIL_USERNAME="your-email@gmail.com"
GMAIL_PASSWORD="your-app-password"

# Alternative SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@foodpanda.com"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Logger Configuration
# Log levels: ERROR, WARN, INFO, HTTP, VERBOSE, DEBUG, SILLY
LOG_LEVEL=INFO

# Log transports: console, file, database, remote (comma-separated)
LOG_TRANSPORTS=console,file

# Enable colorized output (true/false)
LOG_COLORIZE=true

# Database logging (true/false)
LOG_DATABASE=false

# Remote logging endpoint
LOG_REMOTE_ENDPOINT=
LOG_REMOTE_API_KEY=

# File logging configuration
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5